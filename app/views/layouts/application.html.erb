<!DOCTYPE html>
<html>
  <head>
    <title>Seatme</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <nav class="navbar navbar-static">
       <div class="container">
        <div class="navbar-header">
          <a class="navbar-brand" href="/"><b>SeatMe!</b></a>
          <a class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="glyphicon glyphicon-chevron-down"></span>
          </a>
        </div>
          <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">  
              <li>
                <%= link_to "Restaurants", "/restaurants" %>
              </li>
              <% if current_user %>
                <li>
                  <%= link_to "My Reservations", "/reservations" %>
                </li>
              <% end %>
            </ul>
            <ul class="nav navbar-right navbar-nav">

                <% if current_user %>

                  <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                      <%= current_user.first_name + ' ' + current_user.last_name %>
                      &nbsp;&nbsp;&nbsp;<i class="glyphicon glyphicon-user"></i> 
                      <i class="glyphicon glyphicon-chevron-down"></i>
                    </a>
                    <ul class="dropdown-menu">
                      <li><%= link_to "My Reservations", "/reservations" %></li>
                      <li class="divider"></li>
                      <li><%= link_to "Log out!", session_path("current"), method: :delete %></li>
                    </ul>
                  </li>

                <% else %>

                  <ul class="nav navbar-nav">
                    <li><%= link_to "Sign Up", new_user_path %></li>
                    <li>
                      <%= link_to new_session_path do %>
                        Log In&nbsp;&nbsp;&nbsp;<i class="glyphicon glyphicon-user"></i>
                      <% end %>
                    </li>

                <% end %>

            </ul>
          </div>
        </div>
    </nav><!-- /.navbar -->

    <!-- Begin Body -->
    <%= yield %>

    <footer>
      <div class="container">
        <div class="row">
          <div class="col-md-12 text-right"><h5>&copy; Bitmaker Labs, 2014</h5></div>
        </div>
      </div>
    </footer>

  </body>
</html>
