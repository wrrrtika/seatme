<h1>New Reservation</h1>

<%= form_for([@restaurant, @reservation]) do |f| %>
	<div class="field">
		<%= f.label :party_size %>
		<%= f.number_field :party_size %>
	</div>
	<div class="field">
		<%= f.label :res_time %>
		<%= f.datetime_field :res_time %>
	</div>
	<div class="field">
		<%= f.label :note %>
		<%= f.text_area :note %>
	</div>
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>